# ============================================================
# Emily Environment Variables
# ============================================================
# Copy this file to .env.local and fill in your values
# ============================================================

# ============================================================
# APP CONFIGURATION
# ============================================================

# Application URL (required for OAuth redirects, email links, etc.)
NEXT_PUBLIC_EMILY_APP_URL=http://localhost:3000

# Application display name
NEXT_PUBLIC_EMILY_APP_NAME=Emily

# Application version (for display in admin)
EMILY_VERSION=1.0.0

# ============================================================
# MULTI-TENANT CONFIGURATION
# ============================================================

# Enable multi-tenant mode for B2B clients
EMILY_MULTI_TENANT_ENABLED=true

# Default subscription tier for new tenants
# Options: basic, professional, enterprise
EMILY_DEFAULT_SUBSCRIPTION_TIER=basic

# Maximum tenants a user can create (per user limit)
EMILY_MAX_TENANTS_PER_USER=10

# Require tenant approval for new signups
EMILY_REQUIRE_TENANT_APPROVAL=false

# ============================================================
# TRUST & RATING SYSTEM
# ============================================================

# Enable trust/rating system
EMILY_TRUST_SYSTEM_ENABLED=true

# Minimum reviews required to display rating
EMILY_MIN_REVIEWS_FOR_RATING=3

# Require verified purchase for reviews
EMILY_REQUIRE_VERIFIED_PURCHASE=false

# Allow public reviews (vs. internal only)
EMILY_PUBLIC_REVIEWS_ENABLED=true

# Review moderation enabled
EMILY_REVIEW_MODERATION_ENABLED=true

# ============================================================
# CREDIT TERMS & BILLING
# ============================================================

# Enable credit terms for B2B clients
EMILY_CREDIT_TERMS_ENABLED=true

# Default credit limit for new clients (in cents)
EMILY_DEFAULT_CREDIT_LIMIT=5000000

# Maximum credit limit (in cents)
EMILY_MAX_CREDIT_LIMIT=50000000

# Enable early payment discounts
EMILY_EARLY_PAYMENT_DISCOUNT_ENABLED=true

# Default early payment discount percentage
EMILY_DEFAULT_EARLY_PAYMENT_DISCOUNT=2

# Default early payment discount days
EMILY_DEFAULT_EARLY_PAYMENT_DAYS=10

# ============================================================
# WHITE-LABEL CONFIGURATION
# ============================================================

# Enable white-label branding
EMILY_WHITELABEL_ENABLED=true

# Allow custom domains for white-label
EMILY_CUSTOM_DOMAINS_ENABLED=true

# Require SSL for custom domains
EMILY_REQUIRE_SSL=true

# Enable custom CSS for tenants
EMILY_CUSTOM_CSS_ENABLED=true

# ============================================================
# SUPABASE (Required)
# ============================================================

# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================
# AUTHENTICATION (Optional)
# ============================================================

# NextAuth.js Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Email provider (resend, sendgrid, etc.)
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_xxxxxxxx
SENDGRID_API_KEY=SG.xxxxxxxx

# ============================================================
# EMAIL TEMPLATES
# ============================================================

# Sender email for transactional emails
EMILY_EMAIL_SENDER=noreply@emily.app
EMILY_EMAIL_SENDER_NAME=Emily

# ============================================================
# FILE STORAGE
# ============================================================

# Storage bucket for white-label assets (logos, etc.)
NEXT_PUBLIC_EMILY_ASSETS_BUCKET=emily-assets

# Maximum logo file size (in bytes, default 2MB)
EMILY_MAX_LOGO_SIZE=2097152

# Allowed logo file types
EMILY_ALLOWED_LOGO_TYPES=image/png,image/jpeg,image/svg+xml,image/webp

# ============================================================
# API RATE LIMITING
# ============================================================

# API rate limit per tenant (requests per minute)
EMILY_TENANT_RATE_LIMIT=100

# API rate limit per user (requests per minute)
EMILY_USER_RATE_LIMIT=60

# ============================================================
# FEATURE FLAGS (Development)
# ============================================================

# Enable debug mode
EMILY_DEBUG=false

# Log level: debug, info, warn, error
EMILY_LOG_LEVEL=info

# Enable experimental features (comma-separated)
# EMILY_EXPERIMENTAL_FEATURES=
